@model BenhNhan.Data.Patient

@{
    ViewData["Title"] = "Delete Patient";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Delete Patient</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-danger">Are you sure you want to delete this patient?</h4>
                    <p class="text-muted">This action cannot be undone.</p>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3 font-weight-bold">First Name</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.FirstName)</dd>

                        <dt class="col-sm-3 font-weight-bold">Last Name</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.LastName)</dd>

                        <dt class="col-sm-3 font-weight-bold">Date of Birth</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.DateOfBirth)</dd>

                        <dt class="col-sm-3 font-weight-bold">Gender</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Gender)</dd>

                        <dt class="col-sm-3 font-weight-bold">Address</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.AddressPatients)</dd>

                        <dt class="col-sm-3 font-weight-bold">Phone</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

                        <dt class="col-sm-3 font-weight-bold">Email</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-3 font-weight-bold">Account ID</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Account.AccountId)</dd>
                    </dl>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="PatientId" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">Confirm Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
