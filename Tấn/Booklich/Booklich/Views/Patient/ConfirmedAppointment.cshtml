@model Booklich.Data.Appointment

<h2>Appointment Confirmation</h2>

@if (Model != null)
{
    <div class="card">
        <div class="card-header">
            <h3>Appointment Details</h3>
        </div>
        <div class="card-body">
            <p><strong>Patient Name:</strong> @Model.Patient.FirstName @Model.Patient.LastName</p>
            <p><strong>Doctor Name:</strong> @Model.Doctor.FullName</p>
            <p><strong>Specialty:</strong> @Model.Doctor.Specialty</p>
            <p><strong>Time:</strong> @Model.TimeSlot</p>
            <p><strong>Fee:</strong> @Model.Fee.ToString("C")</p>
            <p><strong>Notes:</strong> @Model.Notes</p>
        </div>
    </div>
}
else
{
    <p>Unable to retrieve appointment details.</p>
}

<a asp-action="Index" class="btn btn-primary mt-3">Back to Home</a>
