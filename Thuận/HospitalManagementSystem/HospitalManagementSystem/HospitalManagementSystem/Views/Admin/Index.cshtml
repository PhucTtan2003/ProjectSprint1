@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Dashboard";
    var username = HttpContextAccessor?.HttpContext?.Session.GetString("Username");
    var welcomeMessage = TempData["WelcomeMessage"] as string;
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BACH MAI Hospital</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 250px;
            background-color: #343a40;
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            padding-top: 20px;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

            .sidebar a {
                padding: 10px 15px;
                text-decoration: none;
                font-size: 18px;
                color: #ddd;
                display: block;
                width: 100%;
                text-align: center;
            }

                .sidebar a:hover {
                    background-color: #575d63;
                    color: white;
                }

        .main-content {
            margin-left: 250px;
            padding: 20px;
            min-height: 100vh;
            background-color: #ffffff;
        }

        .navbar {
            background-color: #343a40;
            color: white;
            padding: 10px;
        }

            .navbar .navbar-brand {
                color: white;
            }

            .navbar .navbar-nav .nav-link {
                color: white;
            }

                .navbar .navbar-nav .nav-link:hover {
                    color: #ddd;
                }

        .content-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .content-header h1 {
                margin: 0;
                font-size: 24px;
            }

        .chart-container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .sidebar a {
            padding: 10px 15px;
            text-decoration: none;
            font-size: 18px;
            color: #ddd;
            display: flex;
            align-items: center;
            width: 100%;
            text-align: left;
        }

            .sidebar a i {
                margin-right: 10px; /* Khoảng cách giữa icon và text */
                font-size: 20px; /* Điều chỉnh kích thước icon nếu cần */
            }

        .footer {
            position: relative;
            width: 100%;
            background-color: #f8f9fa;
            text-align: center;
            padding: 10px 0;
            clear: both;
            font-size: 14px;
            color: #6c757d;
            bottom: 0;
        }

            .footer a {
                color: #007bff;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>

<body>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            Swal.fire({
                title: 'Chào Quản trị viên!',
                text: 'Chúc bạn một ngày tốt lành!',
                icon: 'info',
                confirmButtonText: 'Đóng'
            });
        });
    </script>

    <div class="sidebar">
        <div class="navbar-brand text-center">
            <img src="~/images/Avengers HOSPITAL.png" alt="Logo" class="img-fluid" style="width: 100px;">
        </div>
        <a href="#"><i class="bi bi-house-door"></i> Tổng quan</a>
        <a href="#"><i class="bi bi-file-earmark-medical"></i> Quản lý hồ sơ đã đặt khám</a>
        <a href="#"><i class="bi bi-person-badge"></i> Quản lý hồ sơ Bác Sĩ</a>
        <a href="#"><i class="bi bi-envelope"></i> Form liên hệ</a>
        <a href="#"><i class="bi bi-bar-chart"></i> Báo cáo thống kê</a>
    </div>


    <div class="main-content">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Quản trị</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <img src="~/images/avatar.jpg" alt="User Avatar" class="rounded-circle" style="width: 30px;">
                                <span>@username</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="https://localhost:7114/Admin/Profile">Tài khoản</a>
                                <div class="dropdown-divider"></div>
                                <a asp-action="Logout" asp-controller="Admin">Đăng Xuất</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Trang Tổng Quan trong đó có sơ đồ -->
        <div class="chart-container">
            <h3>Số lượng hồ sơ của bệnh nhân</h3>
            <canvas id="sourceChart"></canvas>
        </div>

        <div class="chart-container">
            <h3>Số lượng lịch đã đặt khám</h3>
            <canvas id="callChart"></canvas>
        </div>
    </div>
</body>
</html>

