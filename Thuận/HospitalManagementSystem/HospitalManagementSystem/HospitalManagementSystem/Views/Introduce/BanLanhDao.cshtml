<!-- CSS -->
<style>
    .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 30px;
    }

    .text-center {
        text-align: center;
        font-weight: bold;
        margin-bottom: 30px;
        font-size: 1.5em;
        color: #004080;
    }

    .hexagon {
        position: relative;
        width: 250px;
        height: 250px;
        background-color: #fff;
        display: inline-block;
        clip-path: polygon(25% 6.7%, 75% 6.7%, 100% 50%, 75% 93.3%, 25% 93.3%, 0% 50%);
        transition: transform 0.3s, box-shadow 0.3s;
        box-sizing: border-box;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .hexagon-inner {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        clip-path: inherit;
    }

        .hexagon-inner img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: top;
        }

    .hexagon:hover {
        transform: scale(1.05); 
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.2);
    }

    h3 {
        font-size: 1em; 
        color: #004080;
        margin-top: 10px;
        font-weight: 600;
        text-transform: capitalize; 
        letter-spacing: 0.5px;
    }

    p {
        font-size: 0.85em;
        color: #00b5f1;
        margin-top: 10px;
        font-weight: 300;
        text-transform: capitalize;
        letter-spacing: 0.5px;
        line-height: 1.4;
    }

    .flex-wrap-nowrap {
        flex-wrap: nowrap;
    }

</style>

