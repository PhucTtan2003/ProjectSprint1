@model HospitalManagementSystem.Models.LoginVM

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f8f9fa;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-container {
            background-color: #ffffff;
            padding: 30px 40px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            width: 360px;
            box-sizing: border-box;
            border-radius: 8px;
        }

            .login-container h1 {
                margin-bottom: 15px;
                font-size: 22px;
                color: #343a40;
                text-align: center;
            }

            .login-container h4 {
                margin-bottom: 25px;
                font-size: 16px;
                color: #6c757d;
                text-align: center;
            }

            .login-container form {
                display: flex;
                flex-direction: column;
            }

            .login-container .form-group {
                margin-bottom: 15px;
            }

                .login-container .form-group label {
                    display: block;
                    margin-bottom: 5px;
                    color: #495057;
                    font-weight: 500;
                }

                .login-container .form-group input {
                    width: 100%;
                    padding: 10px;
                    border: 1px solid #ced4da;
                    border-radius: 5px;
                    font-size: 14px;
                    box-sizing: border-box;
                }

                .login-container .form-group .text-danger {
                    margin-top: 5px;
                    font-size: 0.875em;
                    color: #dc3545;
                }

            .login-container .btn-primary {
                width: 100%;
                padding: 10px;
                border: none;
                border-radius: 5px;
                background-color: #007bff;
                color: white;
                font-size: 16px;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .login-container .btn-primary:hover {
                    background-color: #0056b3;
                }

            .login-container .extra-options {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-top: 15px;
            }

                .login-container .extra-options a {
                    color: #007bff;
                    font-size: 14px;
                    text-decoration: none;
                }

                    .login-container .extra-options a:hover {
                        text-decoration: underline;
                    }

            .login-container a.back-link {
                display: block;
                margin-top: 20px;
                text-align: center;
                color: #007bff;
                text-decoration: none;
                font-size: 14px;
            }

                .login-container a.back-link:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="login-container">
        <h1>@ViewData["Title"]</h1>
        <h4>Please log in to your account</h4>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordAccount" class="control-label">Password</label>
                <input asp-for="PasswordAccount" class="form-control" type="password" placeholder="Enter your password" />
                <span asp-validation-for="PasswordAccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Roles" class="control-label">Role</label>
                <input asp-for="Roles" class="form-control" placeholder="Enter 'admin' or 'khach'" />
                <span asp-validation-for="Roles" class="text-danger"></span>
            </div>
            <button type="submit" class="btn-primary">Login</button>
        </form>
        <div class="extra-options">
            <a asp-action="ForgotPassword">Forgot Password?</a>
            <a asp-action="Register">Register</a>
        </div>
        <a asp-action="Index" asp-controller="Home" class="back-link">Back to Home</a>
    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
