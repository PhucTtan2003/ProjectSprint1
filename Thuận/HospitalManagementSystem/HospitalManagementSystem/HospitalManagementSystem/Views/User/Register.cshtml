@model HospitalManagementSystem.Models.LoginVM

@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f0f2f5;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .register-container {
            background-color: #fff;
            padding: 30px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
            width: 400px;
            text-align: center;
        }

            .register-container h1 {
                margin-bottom: 10px;
                font-size: 28px;
                color: #333;
                font-weight: bold;
            }

            .register-container h4 {
                margin-bottom: 30px;
                font-size: 18px;
                color: #666;
            }

            .register-container form {
                display: flex;
                flex-direction: column;
            }

            .register-container .form-group {
                width: 100%;
                margin-bottom: 20px;
                text-align: left;
            }

                .register-container .form-group label {
                    margin-bottom: 5px;
                    color: #333;
                    font-weight: bold;
                }

                .register-container .form-group input {
                    width: 100%;
                    padding: 10px;
                    border: 1px solid #ccc;
                    border-radius: 5px;
                    box-sizing: border-box;
                    font-size: 16px;
                }

                    .register-container .form-group input:focus {
                        border-color: #007bff;
                        box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
                        outline: none;
                    }

                .register-container .form-group .text-danger {
                    margin-top: 5px;
                    font-size: 0.875em;
                    color: red;
                }

            .register-container .btn-primary {
                width: 100%;
                padding: 12px;
                border: none;
                border-radius: 5px;
                background-color: #007bff;
                color: white;
                font-size: 18px;
                font-weight: bold;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .register-container .btn-primary:hover {
                    background-color: #0056b3;
                }

            .register-container a {
                margin-top: 20px;
                display: inline-block;
                color: #007bff;
                text-decoration: none;
                font-size: 16px;
                transition: color 0.3s ease;
            }

                .register-container a:hover {
                    color: #0056b3;
                }
    </style>
</head>
<body>
    <div class="register-container">
        <h1>@ViewData["Title"]</h1>
        <h4>Create your account</h4>
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordAccount" class="control-label">Password</label>
                <input asp-for="PasswordAccount" class="form-control" type="password" placeholder="Enter your password" />
                <span asp-validation-for="PasswordAccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Roles" class="control-label">Role</label>
                <input asp-for="Roles" class="form-control" placeholder="Enter 'admin' or 'khach'" />
                <span asp-validation-for="Roles" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Account" class="btn btn-primary" />
            </div>
        </form>
        <a asp-action="Index">Back to List</a>
    </div>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>

