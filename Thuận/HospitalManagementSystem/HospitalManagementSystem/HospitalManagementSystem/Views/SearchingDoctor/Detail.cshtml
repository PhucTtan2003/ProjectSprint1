@model HospitalManagementSystem.Data.Doctor

<h1>Thông tin chi tiết bác sĩ</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.FullName</h5>
        <h6 class="card-subtitle mb-2 text-muted">@Model.Specialty</h6>
        <p class="card-text">@Model.DescriptionDoctor</p>
        <p><strong>Kinh nghiệm:</strong> @Model.Experience</p>
        <p><strong>Học vấn:</strong> @Model.Education</p>
        <p><strong>Chức vụ:</strong> @Model.Position</p>

        @* Nếu cần hiển thị thêm thông tin lịch khám của bác sĩ, có thể thêm vào đây *@
        <p><strong>Lịch khám:</strong></p>
        <ul>
            @foreach (var timeSlot in Model.TimeSlots)
            {
                <li>@timeSlot.Date.ToString("dd/MM/yyyy") - @timeSlot.Time</li>
            }
        </ul>
    </div>
</div>
<style>
    html {
    font-size: 14px;
}



.btn:focus, .btn:active:focus, .btn-link.nav-link:focus, .form-control:focus, .form-check-input:focus {
