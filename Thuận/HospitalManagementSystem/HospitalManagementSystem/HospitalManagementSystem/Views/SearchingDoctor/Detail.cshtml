    position: relative;
    min-height: 100%;
}

body {
    margin-bottom: 60px;
    font-family: Arial, sans-serif;
}

.form-row {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-bottom: 20px;
}

.form-group {
    flex: 1;
}

    .form-group:last-child {
        margin-right: 0;
    }

