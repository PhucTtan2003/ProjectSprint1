@model IEnumerable<string>

@{
    ViewData["Title"] = "Chọn Chuyên Khoa";
}

<div style="max-width: 700px; margin: 0 auto; padding: 30px; background-color: #f4f4f4; border-radius: 10px; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
    <h1 style="text-align: center; color: #007bff; font-weight: bold; margin-bottom: 30px;">Vui lòng chọn chuyên khoa</h1>

    <form asp-action="BookAppointment" method="post">
        <div style="display: flex; flex-wrap: wrap; gap: 15px;">
            @foreach (var specialty in Model)
            {
                <button type="submit" name="specialty" value="@specialty" style="flex: 1 1 45%; padding: 20px; background-color: #34495e; color: white; border: none; border-radius: 8px; cursor: pointer; font-size: 18px; transition: background-color 0.3s ease;">
                    @specialty
                </button>
            }
        </div>
    </form>
</div>

<style>
    button[type="submit"]:hover {
        background-color: #2c3e50;
    }
</style>
