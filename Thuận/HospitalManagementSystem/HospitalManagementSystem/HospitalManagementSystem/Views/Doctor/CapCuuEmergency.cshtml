        color: #007bff;
    }

    /* Cuối cùng, phần ảnh các bác sĩ */
    .doctor-photo {
        border-radius: 50%;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        width: 150px;
        height: 150px;
        object-fit: cover;
    }

        .doctor-photo:hover {
            transform: translateZ(60px) rotate(5deg);
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.5);
        }
    /* Định dạng hình ảnh với hiệu ứng 3D */
    .image-3d {
        width: 100%;
        height: auto;
        border-radius: 10px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        transform: translateZ(20px);
    }

        .image-3d:hover {
            transform: translateZ(60px) rotateY(5deg);
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.5);
        }

    /* Doctor Card */
    .doctor-card {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: #f9fbfc;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .doctor-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

    /* Doctor Image */
    .doctor-image {
        flex-shrink: 0;
        width: 100px;
        height: 100px;
