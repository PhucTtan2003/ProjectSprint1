        <div class="col-md-12">
            <figure class="image image_resized" style="width: 100%; margin-top: 20px;">
                <img src="~/images/Doctor/Hồi sức tích cực - Intensive Care_2.png" alt="Khoa Hồi sức tích cực" class="image-3d">
            </figure>
        </div>
