    /* Tiêu đề chính */
    h2 {
        font-size: 2.5rem;
        color: #007bff;
        text-align: center;
        text-transform: uppercase;
        margin-bottom: 20px;
        letter-spacing: 1.5px;
    }

    /* Phần tiêu đề phụ */
