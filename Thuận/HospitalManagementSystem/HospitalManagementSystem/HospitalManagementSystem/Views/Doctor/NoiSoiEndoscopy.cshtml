        background-color: #007bff;
        color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 5px 15px rgba(0, 123, 255, 0.3);
        transform: translateZ(40px);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

