<!-- JavaScript -->
<script>
    // Tạo mảng chứa tên các chuyên khoa
    var specialties = [
        { name: "Cấp cứu - Emergency", link: "@Url.Action("CapCuuEmergency", "Doctor")" },
        { name: "Gây mê hồi sức - Anesthesiology and Resuscitation", link: "@Url.Action("GayMeHoiSuc", "Doctor")" },
        { name: "Hô hấp - Respiratory", link: "@Url.Action("HoHapRespiratory", "Doctor")" },
        { name: "Nội soi - Endoscopy", link: "@Url.Action("NoiSoiEndoscopy", "Doctor")" },
        { name: "Tai - Mũi - Họng - Otolaryngology", link: "@Url.Action("TaiMuiHongOtolaryngology", "Doctor")" },
        { name: "Hồi sức tích cực - Intensive Care", link: "@Url.Action("HoiSucTichCucIntensiveCare", "Doctor")" },
        { name: "Tim mạch - Cardiology", link: "@Url.Action("TimMachCardiology", "Doctor")" },
        { name: "Tiêu hoá - Gastroenterology", link: "@Url.Action("TieuHoaGastroenterology", "Doctor")" }
    ];

    function filterSpecialties() {
        var input = document.getElementById('searchInput');
        var filter = input.value.toLowerCase();
        var suggestionBox = document.getElementById('suggestionBox');
        suggestionBox.innerHTML = ''; // Clear any previous suggestions

        if (filter.length > 0) {
            specialties.forEach(function (specialty) {
                if (specialty.name.toLowerCase().indexOf(filter) > -1) {
                    var suggestionItem = document.createElement('a');
                    suggestionItem.innerText = specialty.name;
                    suggestionItem.href = specialty.link;
                    suggestionBox.appendChild(suggestionItem);
                }
            });
        }
    }
</script>

