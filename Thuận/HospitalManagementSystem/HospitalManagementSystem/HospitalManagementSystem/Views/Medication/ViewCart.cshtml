@model List<HospitalManagementSystem.Models.CartItem>

<h1>Giỏ hàng của bạn</h1>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Hình ảnh</th>
                <th>Tên thuốc</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Tổng tiền</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@Url.Content($"/images/Medication/{item.MedicationImage}")" alt="Hình ảnh thuốc" class="cart-image" /></td>
                    <td>@item.MedicationName</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@item.Total.ToString("C")</td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post" style="display:inline;">
                            <input type="hidden" name="medicationId" value="@item.MedicationId" />
                            <button type="submit" class="btn btn-danger">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="total-amount">
        <p><strong>Tổng số tiền:</strong> @ViewBag.TotalAmount.ToString("C")</p>
    </div>

    <a href="@Url.Action("Checkout", "Medication")" class="btn btn-primary">Thanh toán</a>
}
else
{
    <p>Giỏ hàng của bạn đang trống.</p>
}



<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<style>
    .cart-image {
        max-width: 100px;
        height: auto;
        border-radius: 8px;
        object-fit: cover;
    }

    .table {
        width: 100%;
        margin-top: 20px;
    }

        .table th, .table td {
            padding: 15px;
            text-align: center;
        }

    .btn-primary {
        margin-top: 20px;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
        padding: 5px 10px;
        font-size: 1em;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .total-amount {
        text-align: right;
        font-size: 1.2em;
        margin-bottom: 20px;
    }

    .btn-primary {
        margin-top: 10px;
        display: block;
        width: 100%;
    }

</style>
